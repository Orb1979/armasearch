<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_light"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >



    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:text="@string/header_search"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_pink"
        android:background="@color/green_dark"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/btnExpandSearch"
        android:layout_alignTop="@id/lblTitle"
        android:layout_alignRight="@id/lblTitle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:textSize="12sp"
        android:text="@string/btnCollapse"
        />
    <RelativeLayout
        android:id="@+id/viewExpandSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTitle"
        android:layout_marginTop="4dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        >

        <EditText
            android:id="@+id/inputFilterName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textFilter"
            android:imeOptions="actionDone"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="@color/blackish"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="4dp"
            />
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputFilterName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/btnSearch"
            android:textColor="@color/light_pink"
            android:background="@drawable/button_with_shadow"
            />

        </RelativeLayout>

    <!--********* optional filters  *********-->
    <TextView
        android:id="@+id/lblFilters"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_below="@id/viewExpandSearch"
        android:gravity="center_vertical"
        android:text="@string/headerFilters"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_pink"
        android:background="@color/green_dark"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/btnExpandFilters"
        android:layout_alignTop="@id/lblFilters"
        android:layout_alignRight="@id/lblFilters"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:textSize="12sp"
        android:text="@string/btnExpand"
        />
    <RelativeLayout
        android:id="@+id/viewExpandFilters"
        android:layout_below="@id/lblFilters"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        >
        <EditText
            android:id="@+id/inputFilterPlayerCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/blackish"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/lblFilterPlayerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/inputFilterPlayerCount"
            android:layout_alignBottom="@+id/inputFilterPlayerCount"
            android:text="@string/filterPlayers"
            android:textColor="@color/blackish"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/inputFilterCountry"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="textFilter"
            android:layout_below="@id/inputFilterPlayerCount"
            android:textSize="14sp"
            android:textColor="@color/blackish"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/lblFilterCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/inputFilterCountry"
            android:layout_alignBottom="@+id/inputFilterCountry"
            android:text="@string/filterCountry"
            android:textColor="@color/blackish"
            android:textSize="16sp"
            />
        <CheckBox
            android:id="@+id/cbFilterDedicated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputFilterCountry"
            android:text="@string/filterDedicated"
            android:textColor="@color/blackish"
            android:textSize="16sp"
            android:checked="false"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="-5dp"
            />

    </RelativeLayout>

     <!--********* Friends Button *********-->

    <TextView
        android:id="@+id/lblAddFriends"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_below="@id/viewExpandFilters"
        android:gravity="center_vertical"
        android:text="@string/headerFriends"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_pink"
        android:background="@color/green_dark"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/btnExpandFriends"
        android:layout_alignTop="@id/lblAddFriends"
        android:layout_alignRight="@id/lblAddFriends"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:textSize="12sp"
        android:text="@string/btnExpand"
        />
    <RelativeLayout
        android:id="@+id/viewExpandFriends"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblAddFriends"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        >

        <com.orb.arma.CustomViews.CustomEditText
            android:id="@+id/inputAddFriend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textFilter"
            android:textSize="16sp"
            android:textColor="@color/blackish"
            />

        <CheckBox
            android:id="@+id/cbAddWildcards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputAddFriend"
            android:text="@string/cbWildcards"
            android:textColor="@color/blackish"
            android:textSize="14sp"
            android:checked="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />
        <ImageButton
            android:id="@+id/btnInfoFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info32"
            android:layout_toRightOf="@id/cbAddWildcards"
            android:layout_below="@id/inputAddFriend"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descImageInfo" />


        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbAddWildcards"
            android:text="@string/btnAddFriend"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/light_pink"
            android:background="@drawable/button_with_shadow"
            android:layout_marginBottom="4dp"
            />

            <ListView
                android:id="@+id/lvFriends"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/btnAddFriend"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:descendantFocusability="afterDescendants"
                >
            </ListView>

    </RelativeLayout>

     <!--********* History Button *********-->

    <TextView
        android:id="@+id/lblHistory"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/viewExpandFriends"
        android:gravity="center_vertical"
        android:text="@string/headerSearchHistory"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_pink"
        android:background="@color/green_dark"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        />
    <ListView
        android:headerDividersEnabled="true"
        android:id="@+id/lvHistory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblHistory"
        android:textSize="16sp"
        />

</RelativeLayout>


